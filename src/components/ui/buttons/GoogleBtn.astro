---
const { title } = Astro.props;

interface Props {
  title: string;
}

const googleSVG = `<svg class="h-4 w-4 flex-none fill-current" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
<path d="M12.0003 4.75C13.7703 4.75 15.3553 5.36002 16.6053 6.54998L20.0303 3.12C17.9502 1.19 15.2353 0 12.0003 0C7.31028 0 3.25526 2.69 1.28027 6.60998L5.27028 9.70498C6.21525 6.86002 8.87028 4.75 12.0003 4.75Z"/>
<path d="M23.49 12.27C23.49 11.48 23.42 10.73 23.3 10H12V14.51H18.47C18.18 15.99 17.33 17.25 16.07 18.1L19.93 21.1C22.19 19 23.49 15.92 23.49 12.27Z"/>
<path d="M5.26998 14.2949C5.02498 13.5699 4.88501 12.7999 4.88501 11.9999C4.88501 11.1999 5.01998 10.4299 5.26998 9.7049L1.28501 6.60986C0.47998 8.22986 0 10.0599 0 11.9999C0 13.9399 0.47998 15.7699 1.28501 17.3899L5.26998 14.2949Z"/>
<path d="M12.0004 24.0001C15.2404 24.0001 17.9654 22.9201 19.9304 21.1001L16.0704 18.1001C15.0054 18.8401 13.6204 19.2501 12.0004 19.2501C8.8704 19.2501 6.21537 17.1401 5.2704 14.2951L1.27539 17.3901C3.25537 21.3101 7.3104 24.0001 12.0004 24.0001Z"/>
</svg>`;

const baseClass = "w-full flex items-center justify-center gap-2 rounded-md p-3 text-base font-medium text-zinc-900";
const hoverClass = "hover:bg-zinc-100/90";
const focusClass = "focus-visible:outline focus-visible:outline-2 focus-visible:outline-yellow-600";
const disabledClass = "disabled:pointer-events-none disabled:opacity-50";
const borderClass = "border border-zinc-500/90";
const darkModeClasses = "dark:border-zinc-500 dark:text-zinc-300 dark:hover:border-yellow-600 dark:hover:text-white";
---

<button
  type="button"
  class={`${baseClass} ${hoverClass} ${focusClass} ${disabledClass} ${borderClass} ${darkModeClasses}`}
>
  <!-- Google SVG Icon -->
  <span set:html={googleSVG} />
  {title}
</button>
