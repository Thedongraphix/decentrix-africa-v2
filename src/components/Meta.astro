---
import { getImage } from "astro:assets";
import { OG, SITE } from "@data/constants";
import faviconSvgSrc from "@images/icon.svg";
import faviconSrc from "@images/icon.png";

// Default properties for the Meta component
const {
  meta = "Decentrix Africa - Revolutionizing Africa's Digital Future with Web3",
  structuredData = null,
  customDescription = null,
  customOgTitle = null,
} = Astro.props;

// Use custom description if provided, otherwise use default meta
const description = customDescription || meta;

// Define the metadata for your website and individual pages
const siteUrl = Astro.site ? Astro.site.toString() : "https://decentrix.africa.com";
const author = SITE.author;
const socialImageRes = await getImage({
  src: OG.image,
  width: 1200,
  height: 600,
});

const languages = {
  en: "",
  fr: "fr",
};

// Generate canonical URL
const canonicalURL = `${siteUrl}${Astro.url.pathname}`;
const locale = "en_US"; // Default locale
const ogImage = socialImageRes.src;
const twitterImage = socialImageRes.src;

// Generate alternate language links HTML
const fullPath = Astro.url.pathname;
const alternateLanguageLinks = Object.entries(languages)
  .map(([lang, prefix]) => {
    const cleanPath = fullPath.replace(/^\/(fr|en)\//, "/");
    const prefixedPath = prefix ? `/${prefix}${cleanPath}` : cleanPath;
    const normalizedPath = prefixedPath.replace(/\/\/+/g, "/");
    const href = `${siteUrl}${normalizedPath}`;
    
    return `<link rel="alternate" hreflang="${lang}" href="${href}" />`;
  })
  .join("\n");

// Generate and optimize the favicon images
const faviconSvg = await getImage({
  src: faviconSvgSrc,
  format: "svg",
});

const appleTouchIcon = await getImage({
  src: faviconSrc,
  width: 180,
  height: 180,
  format: "png",
});
---

{/* Inject structured data if provided */}
{
  structuredData && (
    <script
      is:inline
      type="application/ld+json"
      set:html={JSON.stringify(structuredData)}
    />
  )
}
{/* Define the character set, description, author, and viewport settings */}
<meta charset="utf-8" />

<!-- Preload key fonts to improve performance and ensure consistent loading across devices -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

<meta content={description} name="description" />
<meta name="web_author" content={author} />
<meta
  name="viewport"
  content="width=device-width, initial-scale=1.0, maximum-scale=5.0, minimum-scale=1.0"
/>
<meta http-equiv="X-UA-Compatible" content="ie=edge" />
<link rel="canonical" href={canonicalURL} />
{alternateLanguageLinks && (
  <>
    <div set:html={alternateLanguageLinks} />
  </>
)}

{/* Facebook Meta Tags */}
<meta property="og:locale" content={locale} />
<meta property="og:url" content={siteUrl} />
<meta property="og:type" content="website" />
<meta property="og:title" content={customOgTitle || SITE.title} />
<meta property="og:site_name" content={SITE.title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImage} />
<meta content="1200" property="og:image:width" />
<meta content="600" property="og:image:height" />
<meta content="image/png" property="og:image:type" />

{/* Twitter Meta Tags */}
<meta name="twitter:card" content="summary_large_image" />
<meta property="twitter:domain" content={siteUrl.replace(/^https?:\/\//, '')} />
<meta property="twitter:url" content={siteUrl} />
<meta name="twitter:title" content={SITE.title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={twitterImage} />

{/* Links to the webmanifest and sitemap */}
<link rel="manifest" href="/manifest.json" />
{/* https://docs.astro.build/en/guides/integrations-guide/sitemap/ */}
<link rel="sitemap" href="/sitemap-index.xml" />

{/* Links for favicons */}
<link href="/favicon.ico" rel="icon" sizes="any" type="image/x-icon" />
<link href={faviconSvg.src} rel="icon" type="image/svg+xml" sizes="any" />
<meta name="mobile-web-app-capable" content="yes" />
<link href={appleTouchIcon.src} rel="apple-touch-icon" />
<link href={appleTouchIcon.src} rel="shortcut icon" />
{/* Set theme color */}
<meta name="theme-color" content="#0A0340" />