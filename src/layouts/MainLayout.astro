---
// Importing necessary components
import Meta from "@components/Meta.astro";
import Navbar from "@components/sections/navbar&footer/Navbar.astro";
import FooterSection from "@components/sections/navbar&footer/FooterSection.astro";
import { SITE } from "@data/constants";
import "@styles/global.css";
import "@styles/fonts.css";

// Setting expected props
const {
  title = SITE.title,
  meta,
  structuredData,
  lang = "en",
  customDescription = null,
  customOgTitle = null,
} = Astro.props;

// Interface to type-check the properties
interface Props {
  title?: string;
  meta?: string;
  structuredData?: object;
  lang?: string;
  customDescription?: string | null;
  customOgTitle?: string | null;
}
---

<html lang={lang} class="scrollbar-hide lenis lenis-smooth scroll-pt-16 font-sans">
  <head>
    {/* Adding metadata to the HTML document */}
    <Meta
      meta={meta}
      structuredData={structuredData}
      customDescription={customDescription}
      customOgTitle={customOgTitle}
    />
    {/* Define the title of the page */}
    <title>{title}</title>
    <style>
      html, body {
        font-family: 'Jost', sans-serif !important;
      }
    </style>
    <!-- Fix for wallet extension conflicts -->
    
    <script is:inline>
      // Script to handle theme. Defaults to light unless 'hs_theme' in localStorage is explicitly 'dark'.
      if (localStorage.getItem("hs_theme") === "dark") {
        document.documentElement.classList.add("dark");
      } else {
        // Default to light mode: remove dark class and ensure no hs_theme or set it to light.
        document.documentElement.classList.remove("dark");
        // Optionally, to make light the persistent default until user changes:
        // localStorage.setItem("hs_theme", "light"); 
        // However, it's better if the theme components (ThemeSelect, Navbar script) handle setting hs_theme to 'light' when user picks light.
        // For a true first-visit default to light, and respecting user choice later, just removing 'dark' is enough if no 'dark' is stored.
      }
    </script>
    <script>
      import "@scripts/lenisSmoothScroll.js";
      import "@scripts/theme-colors.js";
      import "@scripts/font-loader.js";
    </script>
  </head>
  <body
    class="bg-neutral-200 font-body selection:bg-accent selection:text-neutral-700 dark:bg-neutral-800"
  >
    {/*
    Setting up the main structure of the page.
    The Navbar is placed at the top, with a slot for the main content and FooterSection at the bottom.
    */}
    <div class="mx-auto max-w-(--breakpoint-2xl) px-4 sm:px-6 lg:px-8">
      <Navbar />
      <main>
        <slot />
      </main>
    </div>
    <FooterSection />
    <script>
      // https://preline.co
      import "preline/preline.js";
    </script>
    <style>
      /* CSS rules for the page scrollbar */
      .scrollbar-hide::-webkit-scrollbar {
        display: none;
      }

      .scrollbar-hide {
        -ms-overflow-style: none;
        scrollbar-width: none;
      }
    </style>
  </body>
</html>
