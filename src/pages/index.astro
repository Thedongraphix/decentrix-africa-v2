---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/hero-image.jpg";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/kabarak.jpg";
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";
import { partnersData } from "@/data_files/constants";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Join our Web3 community"
    url="#"
  />

  <HeroSection
    title=`Revolutionizing Africa's Digital Future with <span
        class="text-accent dark:text-accent">Web3</span>`
    subTitle="Empowering businesses to scale across Africa through innovative Web3 marketing strategies and user acquisition expertise."
    primaryBtn="Explore Services"
    primaryBtnURL="/services"
    secondaryBtn="Contact Our Team"
    secondaryBtnURL="/contact"
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.9</span> / 5`
    starCount={5}
    reviews=`From Over <span class="font-bold">120+</span> Satisfied Clients`
    src={heroImage}
    alt="Decentrix Africa team conducting a Web3 workshop with entrepreneurs"
  />

  <ClientsSection
    title="Trusted by Web3 Innovators"
    subTitle="Partnering with leading projects to drive adoption across Africa."
    partners={partnersData}
  />

  <FeaturesGeneral
    title="Unlocking Africa's Web3 Potential"
    subTitle="At Decentrix Africa, we address the unique challenges of Web3 adoption in African markets. From educational campaigns to community building, we're dedicated to helping your project succeed through innovative marketing and user acquisition strategies."
    src={featureImage}
    alt="Decentrix Africa team conducting a strategy session"
    features={features}
  />

  <FeaturesNavs
    title=`Leverage <span class="text-accent dark:text-accent">Decentrix Africa's</span> expertise to accelerate your Web3 adoption across the continent.`
    tabs={[
      {
        heading: "Strategic Market Research",
        content:
          "Gain critical insights into Africa's diverse Web3 landscape. Our comprehensive market research provides the foundation for successful entry and expansion strategies tailored to each region's unique characteristics.",
        svg: "tools",
        src: tools,
        alt: "Market research and analytics dashboard",
        first: true,
      },
      {
        heading: "Community Building",
        content:
          "Cultivate engaged and loyal communities across Africa. Our community building services span both digital platforms and physical touchpoints, creating genuine connections that drive sustainable growth for your project.",
        svg: "dashboard",
        src: dashboard,
        alt: "Community management dashboard showing engagement metrics",
        second: true,
      },
      {
        heading: "User Acquisition",
        content:
          "Implement data-driven user acquisition strategies that deliver measurable results. Our multi-channel approach combines digital marketing, influencer partnerships, and on-ground activations to reach and convert your target audience.",
        svg: "house",
        src: construction,
        alt: "User acquisition funnel visualization showing conversion metrics",
      },
    ]}
  />

  <TestimonialsSection
    title="Accelerate Your Web3 Growth"
    subTitle="At Decentrix Africa, we provide the expertise, connections, and strategies to help you scale across African markets effectively."
    testimonials={[
      {
        content:
          "Decentrix Africa transformed our approach to the African market. Their deep understanding of Web3 adoption challenges and innovative solutions helped us build a thriving community across multiple countries. Their localized strategy was exactly what we needed.",
        author: "Sarah Kimani",
        role: "Chief Marketing Officer | BlockchainConnect",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "50k+",
        description:
          "users onboarded to Web3 platforms across 12 African countries",
      },
      {
        count: "65%",
        description:
          "average increase in community engagement through our strategies",
      },
      {
        count: "28%",
        description:
          "higher retention rates compared to standard marketing approaches",
      },
      {
        count: "3x",
        description: "faster market penetration with our localized techniques",
      },
    ]}
  />

  <PricingSection pricing={pricing} />

  <FAQ title="Frequently<br />asked questions" faqs={faqs} />

  <HeroSectionAlt
    title="Let's Build Africa's Web3 Future Together"
    subTitle="Partner with Decentrix Africa to unlock the transformative potential of Web3 technologies across the continent."
    url="#"
  />
</MainLayout>
