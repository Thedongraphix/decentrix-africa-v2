---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import heroImage from "@images/hero-image.jpg";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/kabarak.jpg";
import construction from "@images/panel.avif";
import tools from "@images/sui guy.avif";
import dashboard from "@images/general.avif";
import { partnersData } from "@/data_files/constants";
import avatar1 from "@images/avatars/avatar1.jpg";
import avatar2 from "@images/avatars/avatar2.jpg";
import avatar3 from "@images/avatars/avatar3.jpg";
import avatar4 from "@images/avatars/avatar4.jpg";
import testimonialAvatar from "@images/avatars/testimonial.jpg";


const avatarSrcs = [avatar1, avatar2, avatar3, avatar4];
---



<MainLayout>
 

  <HeroSection
    title=`Revolutionizing Africa's Digital Future with <span
        class="text-primary dark:text-primary font-extrabold">Web3</span>`
    subTitle="Empowering businesses to scale across Africa through innovative Web3 marketing strategies and user acquisition expertise by Decentrix Africa."
    primaryBtn="Explore Services"
    primaryBtnURL="/services"
    reviews=`From Over <span class="font-bold">120+</span> Satisfied Clients`
    src={heroImage}
    alt="Decentrix Africa team conducting a Web3 workshop with entrepreneurs"
  />

  <ClientsSection
    title="<span class='text-primary'>Trusted by Web3 Innovators</span>"
    subTitle="Partnering with leading projects to drive adoption across Africa."
    partners={partnersData}
  />

  <FeaturesGeneral
    title="<span class='text-primary'>Unlocking Africa's Web3 Potential</span>"
    subTitle="At Decentrix Africa, we address the unique challenges of Web3 adoption in African markets. From educational campaigns to community building, we're dedicated to helping your project succeed through innovative marketing and user acquisition strategies."
    src={featureImage}
    alt="Decentrix Africa team conducting a strategy session"
    features={features}
  />

  <FeaturesNavs
    title=`Leverage <span class="text-primary dark:text-primary font-extrabold">Decentrix Africa's</span> expertise to accelerate your Web3 adoption across the continent.`
    tabs={[
      {
        heading: "Market Research",
        content:
          "Unlock Africa's Web3 potential with tailored market entry and expansion strategies.",
        svg: "tools",
        src: tools,
        alt: "Market research and analytics dashboard",
        first: true,
      },
      {
        heading: "Community Building",
        content:
          "Forge strong, engaged communities online and offline for sustainable project growth.",
        svg: "dashboard",
        src: dashboard,
        alt: "Community management dashboard showing engagement metrics",
      },
      {
        heading: "User Acquisition",
        content:
          "Drive measurable results with data-driven strategies, converting your target audience.",
        svg: "house",
        src: construction,
        alt: "User acquisition funnel visualization showing conversion metrics",
      },
    ]}
  />

  <TestimonialsSection
    title="<span class='text-primary'>Accelerate Your Web3 Growth</span>"
    subTitle="At Decentrix Africa, we provide the expertise, connections, and strategies to help you scale across African markets effectively."
    testimonials={[
      {
        content:
          "Decentrix Africa transformed our approach to the African market. Their deep understanding of Web3 adoption challenges and innovative solutions helped us build a thriving community across multiple countries.",
        author: "Sarah Kimani",
        role: "Chief Marketing Officer | BlockchainConnect",
        avatarSrc: testimonialAvatar,
      },
    ]}
    statistics={[
      {
        count: "<span class='text-primary'>50k+</span>",
        description:
          "users onboarded to Web3 platforms across 12 African countries",
      },
      {
        count: "<span class='text-primary'>65%</span>",
        description:
          "average increase in community engagement through our strategies",
      },
      {
        count: "<span class='text-primary'>28%</span>",
        description:
          "higher retention rates compared to standard marketing approaches",
      },
      {
        count: "<span class='text-primary'>3x</span>",
        description: "faster market penetration with our localized techniques",
      },
    ]}
  />

  <PricingSection pricing={pricing} />

  <FAQ title="<span class='text-primary'>Frequently</span><br />asked questions" faqs={faqs} />

  <HeroSectionAlt
    title="<span class='text-primary'>Let's Build Africa's Web3 Future Together</span>"
    subTitle="Partner with Decentrix Africa to unlock the transformative potential of Web3 technologies across the continent."
    url="#"
  />
</MainLayout>
