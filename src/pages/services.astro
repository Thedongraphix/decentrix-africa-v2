---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import customEducation from "@images/web3 edu.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/third pic.jpg";
import marketEntry from "@images/sui guy.jpg";
import entryServices from "@images/entry photo.jpg";
import communityTools from "@images/community.jpg";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Market Research & Insights",
    subTitle:
      "Navigating Africa's diverse Web3 landscape requires deep local understanding. Our expert research team provides comprehensive insights into regional market dynamics, user behavior patterns, and competitive analysis. We identify opportunities for growth and adoption across different African territories, ensuring your strategy is built on solid data.",
    single: false,
    imgOne: customEducation,
    imgOneAlt: "Analytics dashboard showing African market research data",
    imgTwo: personWorking,
    imgTwoAlt: "Decentrix team analyzing market trends",
  },
  {
    isRightSection: false,
    title: "User Acquisition & Marketing Strategies",
    subTitle:
      "Our multi-channel user acquisition approach combines digital marketing with on-ground activations. From social media campaigns and SEO to influencer partnerships and content marketing, we implement data-driven strategies tailored to African audiences. Our innovative email campaigns and targeted lead generation efforts drive sustainable growth for your Web3 project.",
    img: beforeAfter,
    imgAlt: "User acquisition funnel displaying conversion metrics",
    btnExists: true,
    btnTitle: "Learn More",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Market Entry & Localization",
    subTitle:
      "Successfully entering African markets requires specialized knowledge of local regulations, culture, and business practices. We provide comprehensive market entry services including feasibility studies, risk assessments, and go-to-market strategy development. Our localization expertise ensures your Web3 project resonates with local audiences while navigating regulatory frameworks.",
    single: false,
    imgOne: marketEntry,
    imgOneAlt: "Team conducting a localization workshop",
    imgTwo: entryServices,
    imgTwoAlt: "Map highlighting Decentrix's reach across Africa",
  },
  {
    isRightSection: false,
    title: "Community Building & Engagement",
    subTitle:
      "Building vibrant, engaged communities is essential for Web3 adoption. We provide comprehensive community management across Discord, Telegram, and other platforms, creating content and virtual engagements that educate and inspire. Our offline event planning and campus activations create meaningful connections between your project and potential users.",
    img: communityTools,
    imgAlt: "Community event with participants engaging in Web3 education",
  },
  {
    isRightSection: true,
    title: "Custom Web3 Educational Campaigns",
    subTitle:
      "Education is the foundation of successful Web3 adoption in Africa. We design and implement custom educational campaigns that break down complex blockchain concepts into accessible formats. Through workshops, guides, and interactive content, we empower users to confidently participate in the Web3 ecosystem, creating knowledgeable communities that support your project's growth.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "Educational workshop on blockchain fundamentals",
    imgTwo: underConstruction,
    imgTwoAlt: "Interactive Web3 learning materials displayed on devices",
    btnExists: true,
    btnTitle: "Read more",
    btnURL: "#",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
const metaDescription =
  "Decentrix Africa offers comprehensive Web3 marketing services from market research and user acquisition to community building and educational campaigns tailored for African markets.";
const ogTitle = "Web3 Marketing & User Acquisition Services | Decentrix Africa";
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://decentrix.africa/services",
    url: "https://decentrix.africa/services",
    name: "Web3 Marketing & User Acquisition Services | Decentrix Africa",
    description:
      "Decentrix Africa offers comprehensive Web3 marketing services from market research and user acquisition to community building and educational campaigns tailored for African markets.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://decentrix.africa",
      name: "Decentrix Africa",
      description:
        "Decentrix Africa is a marketing and user acquisition agency helping businesses scale across Africa by acquiring new customers, leveraging our expertise in African market dynamics and Web3 technologies.",
    },
    inLanguage: "en-US",
  }}
>
  {/* MainSection is the introductory section of the page, it also contains a CTA button */}
  <MainSection
    title="Unlocking Web3 Adoption Across Africa"
    subTitle="At Decentrix Africa, we provide comprehensive Web3 marketing and user acquisition solutions tailored to African markets. Our deep understanding of blockchain technologies and regional dynamics enables us to create strategies that drive meaningful adoption and community growth."
    btnExists={true}
    btnTitle="Schedule a Consultation"
    btnURL="/contact"
  />
  {/* RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  */}
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  {/* FeaturesStats section showcases essential stats valuable to users */}
  <FeaturesStats
    title="Our Impact in Numbers"
    subTitle="Our commitment to Web3 adoption across Africa has delivered measurable results for our clients. At Decentrix Africa, we build strategies that create lasting impact and sustainable growth in this emerging digital landscape."
    mainStatTitle="95%"
    mainStatSubTitle="of our clients successfully establish communities in new African markets"
    stats={[
      {
        stat: "2.5 million+",
        description: "users engaged through our campaigns",
      },
      {
        stat: "12",
        description: "African countries with active communities",
      },
      {
        stat: "68%",
        description: "average increase in project adoption",
      },
    ]}
  />
</MainLayout>
