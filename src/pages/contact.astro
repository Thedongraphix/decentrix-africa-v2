---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Contact | ${SITE.title}`;
const metaDescription =
  "Have questions about Web3 marketing and user acquisition in Africa? Reach out to Decentrix Africa, and let's craft the perfect strategy for your business.";
const ogTitle = "Contact Us | Decentrix Africa";
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://decentrix.africa.com/contact",
    url: "https://decentrix.africa.com/contact",
    name: "Contact Us | Decentrix Africa",
    description:
      "Have questions about Web3 marketing and user acquisition in Africa? Reach out to Decentrix Africa, and let's craft the perfect strategy for your business.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://decentrix.africa.com",
      name: "Decentrix Africa",
      description:
        "Decentrix Africa is a Web3 marketing and user acquisition agency helping businesses scale across Africa through innovative strategies.",
    },
    inLanguage: "en-US",
  }}
>
  <ContactSection />
</MainLayout>
